{
  "name": "dicebot",
  "description": "A Discord dice bot",
  "author": "Taylor Cassidy",
  "main": "./src/index.js",
  "scripts": {
    "start": "node -r dotenv/config ./src/main/index.js",
    "start:ci": "node ./src/main/index.js",
    "start:docker": "docker build --tag dicebot:local . && docker run --env-file .env dicebot:local",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "discord.js": "^14.11.0",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "jest": "^29.5.0",
    "jest-runner-eslint": "^2.0.0"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test"
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/src/main/**/*.js"
        ]
      }
    ],
    "coveragePathIgnorePatterns": [
      "/testdata/"
    ]
  }
}
