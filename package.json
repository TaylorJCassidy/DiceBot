{
  "name": "dicebot",
  "description": "A Discord dice bot",
  "author": "Taylor Cassidy",
  "main": "./src/index.js",
  "scripts": {
    "start": "node -r dotenv/config ./src/main/index.js",
    "start:ci": "node ./src/main/index.js",
    "start:docker": "docker build --tag dicebot:local . && docker run --env-file .env dicebot:local",
    "start:debug": "nodemon -r dotenv/config ./src/main/index.js",
    "test": "jest",
    "test:coverage": "jest --coverage"
  },
  "dependencies": {
    "discord.js": "^14.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.4.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.40.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "jest": "^29.5.0",
    "jest-runner-eslint": "^2.0.0",
    "nodemon": "^2.0.22"
  },
  "jest": {
    "projects": [
      {
        "displayName": "test",
        "testMatch": [
          "<rootDir>/src/test/**/*.js"
        ]
      },
      {
        "runner": "jest-runner-eslint",
        "displayName": "lint",
        "testMatch": [
          "<rootDir>/src/**/*.js"
        ]
      }
    ]
  }
}